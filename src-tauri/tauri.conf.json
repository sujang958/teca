{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Teca",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "xyz.sujang.teca",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Teca",
        "width": 270,
        "height": 130,
        "label": "main",
        "decorations": false,
        "transparent": true
      },
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Teca Settings",
        "width": 400,
        "height": 700,
        "label": "settings",
        "decorations": true,
        "transparent": false,
        "url": "settings.html"
      }
    ]
  }
}
